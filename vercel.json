{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api-mock.json"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true"},
        { "key": "Access-Control-Allow-Origin", "value": "*"},
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS"},
        { "key": "Access-Control-Allow-Headers", "value": "*"}
      ]
    }
  ]
}